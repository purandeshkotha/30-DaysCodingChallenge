class Solution(object):
    def scoreOfParentheses(self, s):
        stack = []

        for char in s:
            if char == '(':
                stack.append(char)
            else:
                if stack[-1] == '(':
                    stack.pop()
                    stack.append(1)  
                else:
                    temp = 0
                    while stack and isinstance(stack[-1], int):
                        temp += stack.pop()
                    stack.pop() 
                    stack.append(2 * temp)  

        return sum(stack)
