class Solution(object):
    def findCheapestPrice(self, n, flights, src, dst, k):
        INF = float('inf')
        prices = [INF] * n
        prices[src] = 0

        for i in range(k + 1):
            temp = prices[:]
            for u, v, cost in flights:
                if prices[u] == INF:
                    continue
                if prices[u] + cost < temp[v]:
                    temp[v] = prices[u] + cost
            prices = temp

        return -1 if prices[dst] == INF else prices[dst]
